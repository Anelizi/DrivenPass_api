// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int          @id @default(autoincrement())
  username   String
  email      String
  password   String
  createdAt  DateTime     @default(now())
  updateAt   DateTime     @updatedAt
  Credential Credential[]
  Note       Note[]
  Card       Card[]

  @@unique([email])
  @@map("user")
}

model Credential {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  password  String
  username  String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  @@unique([title, userId])
  @@map("credentials")
}

model Note {
  id        Int      @id @default(autoincrement())
  title     String
  text      String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  @@unique([title, userId])
  @@map("notes")
}

model Card {
  id         Int      @id @default(autoincrement())
  title      String
  number     String
  cvv        String
  expiration String
  owner      String
  password   String
  user       User     @relation(fields: [userId], references: [id])
  userId     Int
  createdAt  DateTime @default(now())
  updateAt   DateTime @updatedAt

  @@unique([title, userId])
  @@map("cards")
}
